{
  "name": "iAsst",
  "version": "0.1.0",
  "description": "帮助你更好的使用Chrome",
  "default_locale": "zh_CN",

  "icons": {
    "16": "imgs/icons/iasst_16.png",
    "48": "imgs/icons/iasst_48.png",
    "128": "imgs/icons/iasst_128.png"
  },

  "browser_action": {
    "default_title": "iAsst",
    "default_icon": "imgs/icons/iasst_16.png",
    "default_popup": "view/browser_action/index.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["libs/jquery/jquery-2.2.4.min.js", "view/content_scripts/index.js"],
      "css": ["view/content_scripts/index.css"]
    }
  ],

  "options_page": "view/options_page/index.html",

  "background": {
    "persistent": true,
    "page": "view/background/index.html"
  },

  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],

  "web_accessible_resources": [
    "imgs/*"
  ],

  "minimum_chrome_version": "40",
  "manifest_version": 2
}